{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "../core/types"],
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
  },
  "include": ["src",],
  "exclude": ["node_modules", "**/__tests__/*"]
}
